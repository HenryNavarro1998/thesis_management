<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_form_evaluation_certificate_wizard" model="ir.ui.view">
    <field name="name">Evaluation Certificate Wizard</field>
    <field name="model">evaluation.certificate.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group col="4">
          <field name="evaluation_state"/>
        </group>
        <footer>
          <button string="Evaluar" class="btn-primary" name="evaluate" type="object"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>